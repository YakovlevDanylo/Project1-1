class Question():
    correct = 0
    attempts = 0
    def __init__(self, question, answer, wrong_answer1, wrong_answer2, wrong_answer3):
        self.question = question
        self.answer = answer
        self.wrong_answer1 = wrong_answer1
        self.wrong_answer2 = wrong_answer2
        self.wrong_answer3 = wrong_answer3

    def got_right(self):
        Question.correct += 1
        Question.attempts += 1

    def got_wrong(self):
        Question.attempts += 1
